#!/bin/bash

command=`basename "$0"`
if [ $# -lt 2 ]
  then
    echo "usage: $command <host> <target>"
    echo "example: $command 192.168.8.1 files.zip"
    exit
fi

USERNAME=pi
HOST=$1
FILE=$2

echo "downloading from $USERNAME@$HOST"

scp $FILE $USERNAME@$HOST:/home/pi/bundle/files/files.zip $FILE

EOF
